<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">

  <display-fullname>DreamTeamProj</display-fullname>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <resource-ref>
    <res-ref-fullname>jdbc/my_db</res-ref-fullname>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <!--<listener>-->
    <!--<listener-class>-->
      <!--ua.nure.cache.service.MainListener-->
    <!--</listener-class>-->
  <!--</listener>-->

  <filter>
    <filter-fullname>PreProcessFilter</filter-fullname>
    <filter-class>ua.nure.cache.filters.PreProcessFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-fullname>PreProcessFilter</filter-fullname>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-fullname>mvc-dispatcher</servlet-fullname>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-fullname>mvc-dispatcher</servlet-fullname>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!--<servlet>-->
    <!--<servlet-fullname>MainServlet</servlet-fullname>-->
    <!--<servlet-class>ua.nure.cache.servlet.legacy.MainServlet</servlet-class>-->
  <!--</servlet>-->

  <!--<servlet-mapping>-->
    <!--<servlet-fullname>MainServlet</servlet-fullname>-->
    <!--<url-pattern>/project/*</url-pattern>-->
  <!--</servlet-mapping>-->

  <listener>
    <listener-class>
      org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener>

  <context-param>
    <param-fullname>contextConfigLocation</param-fullname>
    <param-value>/WEB-INF/mvc-dispatcher-servlet.xml</param-value>
  </context-param>

  <!-- Spring Security -->
  <filter>
    <filter-fullname>springSecurityFilterChain</filter-fullname>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy
    </filter-class>
  </filter>

  <filter-mapping>
    <filter-fullname>springSecurityFilterChain</filter-fullname>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>